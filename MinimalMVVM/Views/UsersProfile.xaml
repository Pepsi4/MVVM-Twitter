<Window x:Class="MinimalMVVM.Views.UsersProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="UsersProfile" Height="188" Width="276">
    <Grid Margin="0,0,-18.667,-3.667">
        <Label Content="Имя вашего профиля" HorizontalAlignment="Left" Margin="7,26,0,0" VerticalAlignment="Top"/>
        <TextBox Text="{Binding UsersName, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="130,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" AutomationProperties.HelpText="http://"/>
        <Button Command="{Binding UpdateAllUsersListCommand}" Content="Обновить список фолловеров"  HorizontalAlignment="Left" Margin="74,57,0,0" VerticalAlignment="Top" Width="165"/>
    </Grid>
</Window>
