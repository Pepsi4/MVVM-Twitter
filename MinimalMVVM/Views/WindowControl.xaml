<UserControl x:Class="MinimalMVVM.Views.WindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             Height="476.332" Width="567.667">

    <!--xmlns:ViewModels="clr-namespace:MinimalMVVM.ViewModels"-->
    <!--d:DataContext="{d:DesignInstance ViewModels:WindowViewModel}"-->
    <UserControl.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding ConvertTextCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="ReverseBooleanToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel Margin="10,-13,9.667,-14.333">


        <StackPanel Orientation="Horizontal">
            <Label MinWidth="140">Лист пользователей</Label>
            <Label MinWidth="200">C://...</Label>
            <Button HorizontalAlignment="Right" Width="100" Content="Создать"/>
            <Button HorizontalAlignment="Right" Width="100" Content="Открыть"/>
        </StackPanel>


        <StackPanel Orientation="Horizontal">
            <Label MinWidth="140">Белый лист</Label>
            <Label MinWidth="200">C://...</Label>
            <Button HorizontalAlignment="Right" Width="100" >Создать</Button>
            <Button HorizontalAlignment="Right" Width="100" Content="Открыть"/>
        </StackPanel>


        <Label Foreground="Blue" Margin="5,40,5,0" Height="27">Текст файла</Label>
        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
            <RadioButton Command="{Binding ChangeListCommand}" IsChecked="{Binding IsAllUsersListSelected}"  MinWidth="300">Лист пользователей</RadioButton>
            <RadioButton Command="{Binding ChangeListCommand}" MinWidth="300">Белый лист</RadioButton>
        </StackPanel>



        <ListBox  SelectedIndex="{Binding SelectedLineIndex}" ItemsSource="{Binding History, NotifyOnSourceUpdated=True}" Height="200" Margin="5"/>

        <StackPanel Orientation="Horizontal">
            <RadioButton MinWidth="70" Name="id_radio" IsEnabled="{Binding ElementName=http_radio}" IsChecked="True">ID</RadioButton>
            <RadioButton MinWidth="100" IsChecked="{Binding IsHttp}" Name="http_radio">HTTP</RadioButton>
        </StackPanel>

        <GroupBox Visibility="{Binding ElementName=id_radio, Path=IsChecked, Converter={StaticResource ReverseBooleanToVisibilityConverter}}" Height="77">
            <StackPanel>
                <Label Foreground="Blue" Margin="5,5,5,0">ID пользователя</Label>
                <TextBox Text="{Binding SomeText}" Margin="5,5,5.333,5" Height="24"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Visibility="{Binding ElementName=http_radio, Path=IsChecked, Converter={StaticResource ReverseBooleanToVisibilityConverter}}">
            <StackPanel>
                <Label Foreground="Blue" Margin="5,5,5,0">HTTP</Label>
                <!--<TextBox Text="{Binding SomeText, UpdateSourceTrigger=PropertyChanged}" Margin="5,5,5.333,5" Height="24"/>-->
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal">
            <Button MinWidth="200" Command="{Binding ConvertTextCommand}"  Content="Добавить строку в файл"/>
            <Button MinWidth="200" Command="{Binding DeleteLineFromTextCommand}" Content="Удалить выбранную строку из файла"/>
        </StackPanel>


        <!--<Button Command="{Binding AddTextFromFileCommand}" Content="Выбрать файл" ></Button>-->
    </StackPanel>
</UserControl>